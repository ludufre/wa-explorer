{
  "name": "wa-explorer",
  "version": "1.0.0",
  "description": "WhatsApp conversation viewer via smartphone backup.",
  "homepage": "https://github.com/ludufre/wa-explorer",
  "author": {
    "name": "Luan Freitas",
    "email": "eu@luanfreitas.com"
  },
  "keywords": [
    "angular",
    "angular 13",
    "electron",
    "electron 18",
    "nodejs",
    "typescript",
    "playwright",
    "eslint",
    "sass",
    "windows",
    "mac",
    "linux",
    "whatsapp",
    "backup",
    "ios",
    "android"
  ],
  "main": "dist/server/main.js",
  "scripts": {
    "clear": "node ./scripts/clear.js",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "electron-builder install-app-deps && git config core.hooksPath .husky && prisma generate && cd packages/client/ && pnpm install",
    "###### --- SEPARATOR --- ######1": "",
    "start": "npm-run-all -p electron:serve ng:serve",
    "electron:serve-tsc": "tsc --build && node ./scripts/copy-files.js && node ./scripts/install-engines-on-mac.js",
    "ng:serve": "cd ./packages/client && ng serve -c web",
    "ng:build": "cd ./packages/client && ng build --base-href ./",
    "ng:build:prod": "npm run ng:build -- -c production",
    "electron:logs": "node ./scripts/electron-logs.js",
    "electron:serve": "wait-on tcp:4200 && concurrently \"tsc --build -w --preserveWatchOutput && node ./scripts/copy-files.js\" \"nodemon\"",
    "build": "pnpm run ng:build:prod && pnpm run electron:serve-tsc && electron-builder",
    "prepare": "rm -rf node_modules/electron/dist && node node_modules/electron/install.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@prisma/engines": "5.7.1",
    "better-sqlite3": "9.4.1",
    "bplist-parser": "0.3.2",
    "date-fns": "3.3.1",
    "dotenv": "^16.3.1",
    "electron-log": "^5.0.1",
    "nodemon": "3.0.2",
    "plist": "3.1.0",
    "prisma": "^5.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "17.1.1",
    "@angular-eslint/eslint-plugin-template": "17.1.1",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@electron/notarize": "2.2.0",
    "@types/better-sqlite3": "7.6.9",
    "@types/date-fns": "2.6.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "concurrently": "8.2.2",
    "dotenv-cli": "^7.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-debug": "3.2.0",
    "electron-reloader": "1.2.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.1",
    "fs-extra": "^11.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "prettier-eslint": "16.2.0",
    "replace-in-file": "^7.0.2",
    "typescript": "^5.3.3",
    "wait-on": "7.2.0"
  }
}
