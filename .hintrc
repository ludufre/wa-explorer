{
  "extends": [
    "development"
  ],
  "hints": {
    "typescript-config/strict": "off",
    "typescript-config/consistent-casing": "off",
    "no-inline-styles": "off",
    "axe/text-alternatives": "off",
    "compat-api/css": "off",
    "meta-viewport": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "ion-searchbar[inputmode]",
          "meta[name=theme-color]",
          "ion-input[inputmode]",
          "ion-textarea[autocapitalize]",
          "super-input[autocapitalize]"
        ]
      }
    ],
    "axe/forms": [
      "default",
      {
        "label": "off"
      }
    ]
  }
}