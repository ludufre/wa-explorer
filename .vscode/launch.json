{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Renderer (Attach)",
      "port": 9222,
      "webRoot": "${workspaceFolder}/packages/renderer",
      "sourceMaps": true,
      "timeout": 30000
    },
    {
      "name": "Main",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": [
        "--inspect=5858",
        ".",
        "--serve",
        "--remote-debugging-port=9222"
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "preLaunchTask": "Build.Main",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Main (Attach)",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "port": 5858,
      "restart": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "timeout": 30000
    },
    {
      "name": "Dev Server Manager",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-server.js",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:4200",
        "uriFormat": "http://localhost:4200",
        "action": "debugWithChrome"
      }
    }
  ],
  "compounds": [
    {
      "name": "Application Debug",
      "configurations": ["Main", "Renderer (Attach)"],
      "stopAll": true,
      "preLaunchTask": "Build.Renderer"
    },
    {
      "name": "Dev: Full Application",
      "configurations": ["Dev Server Manager", "Main (Attach)", "Renderer (Attach)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "dev",
        "order": 1
      }
    }
  ]
}
